                <div class="select_option">
                    <form action="~/Home/TrangSanPhamPhanLoai" method="get">

                        <ul class="nav" role="tablist">
                            <li>
                                @*<label>Chọn loại sản phẩm</label>*@
                                <select name="loaiSP">
                                    <option selected value="">Chọn theo loại</option>
                                    @foreach (var item in db.TheLoaiSPs.ToList())
                                    {
                                        <option value="@item.ID">@item.TenLoaiSP</option>
                                    }
                                </select>
                            </li>
                            <li>
                                @* <label>Chọn theo giá</label>*@
                                <select name="giaTien" id="short">
                                    <option selected value="">Chọn theo giá tiền</option>
                                    <option value="10-100">10k đến 100k</option>
                                    <option value="100-500">100k đến 500k</option>
                                    <option value="500-1000">500k đến 1 Triệu</option>
                                    <option value="1000-5000" >1 Triệu đến 5 Triệu</option>
                                    <option value="5000-90000">5 Triệu đổ lên</option>
                                </select>
                            </li>
