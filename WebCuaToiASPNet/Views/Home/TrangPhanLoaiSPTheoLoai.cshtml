            <!--shop tab product-->
            @Html.Partial("~/Views/Home/TrangSanPhamPartialView.cshtml", Model)
            <!--shop tab product end-->
            <!--pagination style start-->
            <div class="pagination_style">
                <div class="item_page">
                    <span style="margin-top: 10px; color: mediumpurple; font-weight: bold; font-size: 20px">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    </span>
                </div>

                <div class="page_amount item_page" style="position: relative; top: 10px">
                    <p>Hiển thị từ trang 1 – @Model.PageCount trên @Model.TotalItemCount kết quả</p>
                </div>

                @* tao lien ket cac trang *@

                <div class="page_number">
                    <span>Pages: </span>
                    <ul>
                        <li class="current_number @(Model.PageNumber == 1 ? "disabled" : "")">
                            <a href="@Url.Action("TrangSanPham", new { page = Model.PageNumber - 1 })" tabindex="-1">«</a>
                        </li>

                        @for (int i = 1; i <= Model.PageCount; i++)
                        {
                            <li class="current_number @(Model.PageNumber == i ? "active" : "")">
                                <a href="@Url.Action("TrangSanPham", new { page = i })">@i <span class="sr-only">(current)</span></a>
                            </li>
                        }

                        <li class="current_number @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                            <a href="@Url.Action("TrangSanPham", new { page = Model.PageNumber + 1 })">»</a>
                        </li>
                    </ul>
                </div>
                @* end tao lien ket cac trang *@

            </div>
            <!--pagination style end-->
