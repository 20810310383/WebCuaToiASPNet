@using WebCuaToiASPNet.Models;
@model IEnumerable<SanPham>


<div class="shop_tab_product">
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="large" role="tabpanel">
            <div class="row">
                @foreach(var item in Model) 
                {
                <div class="col-lg-4 col-md-6">
                    <div class="single_product">
                        <div class="product_thumb">
                            <a href="~/ChiTietSanPham/ChiTietSanPham?id=@item.ID"><img src="@item.Image1" alt=""></a>
                            @{
                                if (item.New_Hot == "New")
                                {
                                    <div class="img_icone">
                                        <img src="~/Content/assets/img/cart/span-new.png" alt="">
                                    </div>
                                }
                                else
                                {
                                    <div class="hot_img">
                                        <img src="~/Content/assets/img/cart/span-hot.png" alt="">
                                    </div>
                                }
                            }
                            <div class="product_action">
                                <a href="single-product.html"> <i class="fa fa-shopping-cart"></i> Add to cart</a>
                            </div>
                        </div>
                        <div class="product_content">
                            <span class="product_price">@item.GiaBan.Value.ToString("#,##") VNĐ</span>
                            <h3 class="product_title"><a href="~/ChiTietSanPham/ChiTietSanPham?id=@item.ID">@item.TenSP</a></h3>
                        </div>
                        <div class="product_info">
                            <ul>
                                <li><a href="#" title=" Add to Wishlist ">Add to Wishlist</a></li>
                                <li><a href="#" data-toggle="modal" data-target="#modal_box" title="Quick view">View Detail</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
        <div class="tab-pane fade  " id="list" role="tabpanel">
            @foreach (var item in Model)
            {
                <div class="product_list_item mb-35">
                    <div class="row align-items-center">
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product_thumb">
                                <a href="~/ChiTietSanPham/ChiTietSanPham?id=@item.ID"><img src="@item.Image1" alt=""></a>
                                @{
                                    if (item.New_Hot == "New")
                                    {
                                        <div class="img_icone">
                                            <img src="~/Content/assets/img/cart/span-new.png" alt="">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="hot_img">
                                            <img src="~/Content/assets/img/cart/span-hot.png" alt="">
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-6 col-sm-6">
                            <div class="list_product_content">
                                <div class="product_ratting">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                        <li><a href="#"><i class="fa fa-star"></i></a></li>
                                    </ul>
                                </div>
                                <div class="list_title">
                                    <h3><a href="~/ChiTietSanPham/ChiTietSanPham?id=@item.ID">@item.TenSP</a></h3>
                                </div>
                                <p style="font-weight: bold; font-size: 20px">Mô tả:</p>
                                @Html.Raw(item.Mota)

                                @*<p class="compare">
            <input id="select" type="checkbox">
            <label for="select">Select to compare</label>
        </p>*@
                                <div class="content_price">
                                    <span>@item.GiaBan.Value.ToString("#,##") VNĐ</span>
                                    <span class="old-price">@item.GiaCu.Value.ToString("#,##") VNĐ</span>
                                </div>
                                <div class="add_links">
                                    <ul>
                                        <li><a href="#" title="add to cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a></li>
                                        <li><a href="#" title="add to wishlist"><i class="fa fa-heart" aria-hidden="true"></i></a></li>

                                        <li><a href="#" data-toggle="modal" data-target="#modal_box" title="Quick view"><i class="fa fa-eye" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            </div>

    </div>
</div>


